[32m+[m[32m    function getFormattedDate() {[m
[32m+[m[32m    const now = new Date();[m
[32m+[m[32m    const day = String(now.getDate()).padStart(2, '0');[m
[32m+[m[32m    const month = String(now.getMonth() + 1).padStart(2, '0');[m
[32m+[m[32m    const year = now.getFullYear();[m
[32m+[m[32m    const hour = String(now.getHours()).padStart(2, '0');[m
[32m+[m[32m    const minute = String(now.getMinutes()).padStart(2, '0');[m
[32m+[m[32m    return `${day}/${month}/${year} - ${hour}:${minute}`;[m
[32m+[m[32m}[m
