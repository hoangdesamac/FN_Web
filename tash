[32m+[m
[32m+[m[32m    const stars = document.querySelectorAll('.star-rating span');[m
[32m+[m[32m    const ratingInput = document.getElementById('rating');[m
[32m+[m[32m    const ratingText = document.getElementById('rating-text');[m
