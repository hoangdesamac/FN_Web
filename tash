[32m+[m[32m    e.preventDefault();[m
[32m+[m
[32m+[m[32m    const nameInput = document.getElementById("name");[m
[32m+[m[32m    const ratingInput = document.getElementById("rating");[m
[32m+[m[32m    const commentInput = document.getElementById("comment");[m
[32m+[m
[32m+[m[32m    const name = nameInput.value.trim();[m
[32m+[m[32m    const rating = parseInt(ratingInput.value);[m
[32m+[m[32m    const comment = commentInput.value.trim();[m
[32m+[m
[32m+[m[32m    if (!name || !rating) {[m
[32m+[m[32m        alert('Vui l√≤ng ƒëi·ªÅn ƒë·∫ßy ƒë·ªß th√¥ng tin!');[m
[32m+[m[32m        return;[m
